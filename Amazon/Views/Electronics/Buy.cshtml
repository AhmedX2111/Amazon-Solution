@model Amazon.ViewModels.LaptopViewModel

<div>
    <h2>Buy @Model.Name</h2>
    <p>Price: @Model.Price</p>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <form asp-action="ConfirmPurchase" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="name">Your Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Your Name" required />
            <span asp-validation-for="Customers" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="customerAddress">Your Address</label>
            <input type="text" id="customerAddress" name="customerAddress" class="form-control" placeholder="Your Address" required />
            <span asp-validation-for="Customers" class="text-danger"></span>
        </div>

        <br />
        <button type="submit" class="btn btn-primary">Confirm Purchase</button>
    </form>
</div>
