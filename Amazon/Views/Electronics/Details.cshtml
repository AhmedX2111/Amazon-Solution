@model Amazon.ViewModels.LaptopViewModel

<div class="container">
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    <p><strong>Price: @Model.Price</strong></p>

    @if (Model.Images != null && Model.Images.Any())
    {
        <div id="carouselExampleIndicators" class="carousel slide">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Images.Count(); i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@Url.Content(Model.Images)" class="d-block w-100" alt="Image @i" />
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
    else
    {
        <img src="/images/default-product-image.png" alt="No image available" class="img-fluid" />
    }

    <!-- Button to buy now -->
    <a href="@Url.Action("Buy", "Electronics", new { id = Model.Id })" class="btn btn-primary mt-3">
        Buy Now
    </a>
</div>

<style>
    .carousel {
        max-width: 600px; /* Adjust as needed */
        margin: auto;
    }

    .carousel-item img {
        width: 25%;
        height: auto;
        object-fit: contain; /* Ensures images fit within the carousel without distortion */
    }
</style>
