@{
    ViewData["Title"] = "Error";
}

<div class="container">
    <div class="alert alert-danger mt-3" role="alert" id="errorAlert">
        @ViewBag.Message
    </div>
</div>

<!-- Include JavaScript for auto-redirection -->
<script>
    // Show the error message
    document.getElementById('errorAlert').style.display = 'block';

    // Set a timeout to redirect after 2 seconds
    setTimeout(function () {
        window.location.href = '@Url.Action("Index", "Electronics")';
    }, 2000); // 2000 milliseconds = 2 seconds
</script>
